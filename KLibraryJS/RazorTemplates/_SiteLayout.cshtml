<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Expires" content="86400" />
    <meta name="viewport" content="width=device-width, height=device-height" />
    <meta name="apple-mobile-web-app-capable" content="no" />
    <meta name="description" content="説明です。" />
    <meta name="keywords" content="aaa,bbb,ccc" />
    <meta property="og:url" content="http://tempuri.org/App/" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="サイト名" />
    <meta property="og:title" content="App" />
    <meta property="og:description" content="説明です。" />
    <meta property="og:image" content="http://tempuri.org/favicon.ico" />
    <meta property="og:locale" content="ja_JP" />
    <title>@Page.Title - App</title>
    <link href="@Href("~/favicon.ico")" rel="icon" type="image/vnd.microsoft.icon" />
    <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/vnd.microsoft.icon" />
    <link href="@Href("~/favicon.ico")" rel="apple-touch-icon" type="image/vnd.microsoft.icon" />
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.2.min.js" type="text/javascript"></script>
    <link href="@Href("~/Resources/Styles/App.css")" rel="stylesheet" type="text/css" />
    <script src="@Href("~/Resources/Scripts/App.js")" type="text/javascript"></script>
    @RenderSection("head", false)
</head>
<body>
    <div class="page">
        <div class="header">
            <h1>App</h1>
        </div>
        <div class="content">
            @RenderBody()
        </div>
        <div class="footer">
            @{
                int startYear = 2012;
                int currentYear = DateTime.Now.Year;
                string copyrightYear = string.Format(currentYear == startYear ? "{1}" : "{0} - {1}", startYear, currentYear);
            }
            <p>Copyright &copy; @copyrightYear, Keiho Sakapon.</p>
        </div>
    </div>
    @RenderSection("script", false)
</body>
</html>
